    <style>
        .header .header__nav__option .sign-in-link {
            font-size: 16px;
            color: black;
            margin-right: 15px;
            text-decoration: none;
            font-weight: 600;
        }

        .header .header__nav__option .sign-in-link:hover {
            color: red !important;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            right: 0;
        }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            width: 100%;

        }

        .dropdown-content a:hover {
            background-color: #f1f1f1;

        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .header {
            position: relative;
            z-index: 500;

        }

        body.home .header__menu ul li a[href="/"]:after,
        body.shop .header__menu ul li a[href="/shop"]:after,
        body.contacts .header__menu ul li a[href="/contacts"]:after {
            transform: scale(1);
            /* Show underline */
        }

        .header__menu ul li a:after {
            position: absolute;
            left: 0;
            bottom: 0;
            width: 100%;
            height: 2px;
            background: #e53637;
            content: "";
            transition: transform 0.5s;
            transform: scale(0);
            /* Default no underline */
        }



        .header__logo {
            padding-top: 30px !important;
        }

        .cstm-product {


            margin-bottom: 30px;
            padding: 0 10px;

        }

        .product-cart-wrap {



            display: flex;
            flex-direction: column;
            /* Stack the image and text vertically */
            justify-content: center;
            /* Vertically center the content */
            align-items: center;
            /* Horizontally center the content */
            text-align: center;
            /* Center the text */
            height: 100%;
            /* Make sure it takes full height of its parent */
            width: 100%;
        }


        .off-canvas-menu {
            position: fixed;
            top: 0;
            right: -200px;
            /* Hidden off-screen */
            width: 200px;
            height: 100%;
            background-color: #fff;
            box-shadow: -2px 0 5px rgba(0, 0, 0, 0.5);
            transition: right 0.3s ease-in-out;
            z-index: 1050;
            padding: 10px;
        }

        .off-canvas-menu.open {
            right: 0;
            /* Slide in */
        }

        .canvas__open,
        .canvas__close {
            cursor: pointer;
        }

        .canvas__close {
            background: none;
            border: none;
            font-size: 20px;
            margin: 10px;
        }
    </style>
</head>

