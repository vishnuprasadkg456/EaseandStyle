<%- include("../../views/partials/user/userHeader") %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 2rem;
            padding: 2rem;
        }

        .product-card {
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            overflow: hidden;
        }

        .product-card:hover {
            transform: translateY(-10px);
        }

        .product-image-container {
            position: relative;
            aspect-ratio: 3/3;
            overflow: hidden;
        }

        .product-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-card:hover .product-image {
            transform: scale(1.05);
        }

        .product-hover {
            position: absolute;
            bottom: -70px;
            left: 0;
            right: 0;

            padding: 0.5rem;
            display: flex;
            justify-content: center;
            gap: 1rem;
            transition: bottom 0.3s ease;
        }

        .product-card:hover .product-hover {
            bottom: 0;
        }

        .wishlist-btn,
        .quick-view-btn {
            background: white;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease;
        }

        .wishlist-btn:hover,
        .quick-view-btn:hover {
            transform: scale(1.1);
            color: #ff4444;
        }

        .product-details {
            padding: 1.5rem;
        }

        .product-name {
            font-size: 1.1rem;
            margin: 0 0 0.5rem 0;
            color: #333;
        }

        .product-brand {
            color: #666;
            margin: 0.5rem 0;
            font-size: 0.9rem;
        }

        .product-price {
            margin: 1rem 0;
        }

        .sale-price {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
            margin-right: 0.5rem;
        }

        .regular-price {
            color: #999;
            font-size: 1rem;
        }

        .add-to-cart-btn {
            width: 100%;
            padding: 0.8rem;
            background: #333;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .add-to-cart-btn:hover {
            background: #555;
        }


        .sort-selection {
            appearance: auto !important;
            /* This is crucial - it allows the default select dropdown to appear */

            z-index: 999 !important;
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            background-color: white;
            cursor: pointer;
            min-width: 200px;
            font-size: 14px;
            pointer-events: auto;

        }

        .sort-selection:hover {
            border-color: #333;
        }

        .sort-selection:focus {
            outline: none;
            border-color: #333;
        }

        .sort-selection option {
            padding: 8px;
            background-color: white;
        }


        /* Responsive adjustments */
        @media (max-width: 768px) {
            .product-grid {
                grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
                gap: 1rem;
                padding: 1rem;
            }

            .product-details {
                padding: 1rem;
            }
        }
    </style>


    <!-- Shop Section Begin -->
    <section class="shop spad">
        <div class="container">
            <div class="row">
                <!-- Sidebar Begin -->
                <div class="col-lg-3">
                    <div class="shop__sidebar">
                        <div class="shop__sidebar__search">
                            <form action="/search" method="POST" class="search-form">
                                <input type="text" name="query" placeholder="Search items..." class="search-input">
                                <button type="submit" class="search-button"><span class="icon_search"></span></button>
                            </form>
                        </div>
                        <div class="shop__sidebar__accordion">
                            <div class="accordion" id="accordionExample">
                                <!-- Categories Section -->
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseOne">Categories</a>
                                    </div>
                                    <div id="collapseOne" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__categories">
                                                <ul class="nice-scroll">
                                                    <% for(let i=0; i < category.length; i++) { %>
                                                        <li><a href="/filter?category=<%=category[i]._id%>">
                                                                <%=category[i].name%>
                                                            </a></li>
                                                        <% } %>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Brands Section -->
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseTwo">Brands</a>
                                    </div>
                                    <div id="collapseTwo" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__brand">
                                                <ul>
                                                    <% for(let i=0; i < brand.length; i++) { %>
                                                        <li><a href="/filter?brand=<%=brand[i]._id%>">
                                                                <%=brand[i].brandName%>
                                                            </a></li>
                                                        <% } %>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Price Filter Section -->

                                <!-- Price Filter Section -->
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseThree">Filter Price</a>
                                    </div>
                                    <div id="collapseThree" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__price">
                                                <ul>
                                                    <li>
                                                        <a
                                                            href="/filter?price=500<% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (selectedBrand) { %>&brand=<%= selectedBrand %><% } %>">
                                                            Under ₹500
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a
                                                            href="/filter?price=1000<% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (selectedBrand) { %>&brand=<%= selectedBrand %><% } %>">
                                                            ₹500 - ₹1000
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a
                                                            href="/filter?price=1500<% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (selectedBrand) { %>&brand=<%= selectedBrand %><% } %>">
                                                            ₹1000 - ₹1500
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a
                                                            href="/filter?price=1501<% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (selectedBrand) { %>&brand=<%= selectedBrand %><% } %>">
                                                            Above ₹1500
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Sidebar End -->

                <!-- Product Grid Begin -->
                <div class="col-lg-9">
                    <div class="shop__product__option">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="shop__product__option__left">
                                    <p>Showing <%= products.length %> out of <%= totalProducts %> products</p>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="shop__product__option__right">
                                    <!-- Sorting Dropdown -->
                                    <select name="sort" id="sort" class="sort-selection" onchange="applySort()">
                                        <option value="" disabled selected>Sort By</option>
                                        <option value="price-low-high" <%=selectedSort==='price-low-high' ? 'selected'
                                            : '' %>>Price: Low to High</option>
                                        <option value="price-high-low" <%=selectedSort==='price-high-low' ? 'selected'
                                            : '' %>>Price: High to Low</option>
                                        <option value="name-asc" <%=selectedSort==='name-asc' ? 'selected' : '' %>>Name:
                                            A to Z</option>
                                        <option value="name-desc" <%=selectedSort==='name-desc' ? 'selected' : '' %>
                                            >Name: Z to A</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>


                    <!-- Product Grid -->
                    <main class="product-grid">
                        <% for(let i=0; i < products.length; i++) { %>
                            <div class="product-card">
                                
                                <a href="/productDetails?id=<%=products[i]._id%>">

                                    <div class="product-image-container">
                                        <img src="/uploads/re-image/<%=products[i].productImage[0]%>"
                                            alt="<%=products[i].productName%>" class="product-image" />
                                        <div class="product-hover">
                                            <button class="wishlist-btn">
                                                <i class="fa-solid fa-heart " style="color: #333;"></i>
                                            </button>

                                        </div>
                                    </div>
                                    <div class="product-details">
                                        <h4 class="product-name">
                                            <%=products[i].productName%>
                                        </h4>
                                        <p class="product-brand">Brand: <%=products[i].brand%>
                                        </p>
                                        <div class="product-price">
                                            <span
                                                class="sale-price">₹<%=products[i].salePrice.toLocaleString('en-IN')%></span>
                                            <span
                                                class="regular-price"><strike>₹<%=products[i].regularPrice.toLocaleString('en-IN')%></strike></span>
                                        </div>
                                </a>
                                <button class="add-to-cart-btn">Add to Cart</button>
                            </div>
                </div>
                <% } %>
                    </main>



                    <!-- Pagination -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="product__pagination">
                                <% if (currentPage> 1) { %>
                                    <a
                                        href="/shop?page=<%= currentPage - 1 %><% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (selectedBrand) { %>&brand=<%= selectedBrand %><% } %><% if (selectedPrice) { %>&price=<%= selectedPrice %><% } %>">←</a>
                                    <% } %>

                                        <% for (let i=1; i <=totalPages; i++) { %>
                                            <a class="<%= currentPage === i ? 'active' : '' %>"
                                                href="/shop?page=<%= i %><% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (selectedBrand) { %>&brand=<%= selectedBrand %><% } %><% if (selectedPrice) { %>&price=<%= selectedPrice %><% } %>">
                                                <%= i %>
                                            </a>
                                            <% } %>

                                                <% if (currentPage < totalPages) { %>
                                                    <a
                                                        href="/shop?page=<%= currentPage + 1 %><% if (selectedCategory) { %>&category=<%= selectedCategory %><% } %><% if (selectedBrand) { %>&brand=<%= selectedBrand %><% } %><% if (selectedPrice) { %>&price=<%= selectedPrice %><% } %>">→</a>
                                                    <% } %>
                            </div>
                        </div>
                    </div>

            </div>
            <!-- Product Grid End -->
        </div>
        </div>
    </section>
    <!-- Shop Section End -->

    <!-- Footer Section Begin -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <!-- Footer content here -->
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->

    <!-- Js Plugins -->

    </body>
    <script>
        function applySort() {
            const sortValue = document.getElementById('sort').value;
            console.log("Selected Sort: ", sortValue);  // Log selected sort value
            const url = new URL(window.location.href);
            url.searchParams.set('sort', sortValue);
            window.location.href = url.toString();  // Refresh the page with the new sort
        }

    </script>


    <%- include("../../views/partials/user/userFooter") %>