<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ease & Style - Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .login-container {
            height: 100%;
            width: 100%;
            background-color: #f5f1ed;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding : 40px;
        }

        .form-input {
            width: 100%;
            padding: 12px;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            margin-bottom: 16px;
            font-size: 14px;
        }
        
        .form-input::placeholder {
            color: #a0aec0;
        }
        
        .login-btn {
            background-color: #000;
            color: white;
            padding: 12px 24px;
            border-radius: 25px;
            font-weight: 500;
            transition: all 0.3s ease;
            width: 100%;
        }
        
        .login-btn:hover {
            opacity: 0.9;
        }
        
        .image-container {
            background-color: #a7b7c7;
            overflow: hidden;
            width: 100%;
            height: 100%;
            display: none; /* Hidden on smaller screens */
        }
        
        @media (min-width: 768px) {
            .login-container {
                flex-direction: row;
            }
            .image-container {
                display: block;
                width: 50%;
            }
        }
        
        .custom-logo {
            height: 50px; 
            width: auto; 
        }
        
        .error-message {
            color: red;
            font-size: 14px;
            margin-top: 10px;
        }
        
        .social-login {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 20px;
        }
        
        .social-login-btn {
            background-color: #3b5998; /* Facebook color */
            color: white;
            padding: 12px 24px;
            border-radius: 25px;
            font-weight: 500;
            transition: all 0.3s ease;
            width: 100%;
            margin-bottom: 10px;
        }
        
        .social-login-btn:hover {
            opacity: 0.9;
        }
        
        .google-login-btn {
            background-color: #dd4b39; /* Google color */
            color: white;
            padding: 12px 24px;
            border-radius: 25px;
            font-weight: 500;
            transition: all 0.3s ease;
            width: 100%;
        }
        
        .google-login-btn:hover {
            opacity: 0.9;
        }
        
        .signup-link {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Left Image Section -->
        <div class="image-container w-auto h-auto">
            <img src="img/login/login-image-1.jpg" alt="Fashion Models" class="w-auto h-auto object-fit-cover">
        </div>
        
         
      
           
            
            <!-- Login Form -->
            <form class="space-y-4 m-auto" onsubmit="return validateForm()" method="post" action="/login">
                 <!-- Logo -->
            <div class="d-flex justify-content-center mb-5">
                <img src="img/login/logo.png" alt="Ease & Style Logo" class="custom-logo">
            </div>
              
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" placeholder="name@gmail.com" class="form-input" required>
                    <div id="email-error" class="error-message"></div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" id="password" placeholder="Password" class="form-input" required>
                    <div id="password-error" class="error-message"></div>
                </div>
                <%if(locals.message && message.length>0){%>
                    <div class="alert alert-danger text-center ">
                        <%=message%>
                    </div>
               <% }%>

                <div class="pt-4">
                    <button type="submit" class="login-btn">
                        LOGIN â†’
                    </button>
                </div>
                <div class="social-login">
                    <div class="text-center ">
                        
                        <a href="/auth/google" class="google-login-btn m-2">
                            Login with Google
                        </a>
                    </div>
                </div>
                <div id="error-messages" class="error-message"></div>
                <div class="signup-link">
                    Not registered? <a href="/signup">Sign up</a>
                </div>
            </form>
        
    </div>
    <script>
        function validateForm() {
            let email = document.getElementById('email').value;
            let password = document.getElementById('password').value;
            let errorMessages = document.getElementById('error-messages');

            // Clear previous error messages
            document.getElementById('email-error').textContent = '';
            document.getElementById('password-error').textContent = '';
            errorMessages.textContent = '';

            let isValid = true; // Flag to track overall validity

            // Validate email
            if (!/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(email)) {
                document.getElementById('email-error').textContent = 'Invalid email format';
                isValid = false;
            }

            // Validate password
            if (password.length < 8) {
                document.getElementById('password-error').textContent = 'Password must be at least 8 characters long';
                isValid = false;
            }

            // If any validation fails, prevent form submission
            if (!isValid) {
                return false;
            }

            return true; // Form is valid
        }
    </script>
</body>
</html>